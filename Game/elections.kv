<Icon>:
    border: [0,0,0,0]
    size_hint: 0.125, 0.23
    on_press: app.root.current = "electionsgame"
    opacity: 1.

<StartScreen>:
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/mockup_start_3_0.png'
            size: self.size

    Label:
        id: ChoodeThePlayer
        pos_hint: {'x': 0.0005, 'y': 0.31}
        font_size: 40
        text: 'Choose the player'

    Icon:
        id: IconTrump

    Icon:
        id: IconHillary

    Icon:
        id: Settings

<SettingsScreen>:
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/green.png'
            size: self.size

<EndGameIcon>:
    border: [0,0,0,0]
    size_hint: 1., 1.
    on_press: pass

<EndScreen>
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/green.png'
            size: self.size

    EndGameIcon:
        id: NewGame

    EndGameIcon:
        id: Winner
    EndGameIcon:
        id: NextGame
    EndGameIcon:
        id: RestartGame

<Card>:
    border: [0,0,0,0]
    size_hint: 0.125, 0.23

<Player>:
    border: [0,0,0,0]
    size_hint: 0.125, 0.23

