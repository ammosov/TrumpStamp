<CardKv>:
    border: [0,0,0,0]
    size_hint: (250.0/2048.0), (350.0/1536.0)
    #background_normal: self.get_image()
    background_normal: 'assets/cards/hillary/101.png'
    on_press:
        print('Card pressed.')
        (Animation(pos_hint={'x':1000.0/2048.0, 'y':(1536.0-888.0)/1536.0}, duration=0.5) + \
        (Animation(size_hint=(300.0/2048.0, self.size_hint[1] ), duration=0.5) & \
        Animation(pos_hint={'x':1125.0/2048.0, 'y':(1536.0-888.0)/1536.0}, duration=0.5))).start(self)
        self.play_card()

