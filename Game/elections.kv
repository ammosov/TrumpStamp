 #: kivy 1.7.2
#: import Animation kivy.animation.Animation
#: import time time
#: import SoundLoader kivy.core.audio.SoundLoader


<Icon>:
    rotation: 90
    border: [0,0,0,0]
    size_hint: 0.125, 0.23
    pos_hint: self.pos_hint
    size: self.size

<StartScreen>:
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/start/start_3_0.png'
            size: self.size

    Icon:
        id: Trump
        background_normal: 'assets/start/btn_play_trump_active.png'
        background_down: 'assets/start/btn_play_trump_inactive.png'

    Icon:
        id: Hillary
        background_normal: 'assets/start/btn_play_hillary_active.png'
        background_down: 'assets/start/btn_play_hillary_inactive.png'

    Icon:
        id: Settings
        background_normal: 'assets/start/btn_settings_active.png'
        background_down: 'assets/start/btn_settings_inactive.png'

    Icon:
        id: Credit
        background_normal: 'assets/start/btn_credits_active.png'
        background_down: 'assets/start/btn_credits_inactive.png'

<SettingIcon>
    border: [0,0,0,0]
    size_hint: 0.125, 0.23

<SettingsScreen>:
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/settings/settings_screen_3_0.png'
            size: self.size

    SettingIcon:
        id: Back
        background_normal: 'assets/settings/btn_back_active.png'
        background_down: 'assets/settings/btn_back_inactive.png'


<RoundsIcon>
    border: [0,0,0,0]
    size_hint: 0.125, 0.23
    opacity: 0.

<StatesScroll>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0
        Rectangle:
            pos: self.pos
            size: self.size

<RoundsScreen>:
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/settings/rounds_screen_3_4.png'
            size: self.size

    RoundsIcon:
        id: Back

    StatesScroll: 
        id: StatesScroll

    DistrictsScroll:
        id: DistrictsScroll

    DescriptionScroll:
        id: DescriptionScroll

    RoundsIcon:
        id: Play


<CreditIcon>
    border: [0,0,0,0]
    size_hint: 0.125, 0.23

<CreditScreen>:
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/credits/credits_screen_3_0.png'
            size: self.size

    CreditIcon:
        id: Back
        background_normal: 'assets/credits/btn_back_active.png'
        background_down: 'assets/credits/btn_back_inactive.png'


<EndGameIcon>:
    border: [0,0,0,0]
    size_hint: 1., 1.
    on_press: pass

<EndScreen>
    rotation: 90
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'assets/settings/mockup_end_screen_3_0.png'
            size: self.size

    EndGameIcon:
        id: NewGame
    EndGameIcon:
        id: Winner
    EndGameIcon:
        id: NextGame
    EndGameIcon:
        id: RestartGame

<Card>:
    border: [0,0,0,0]
    size_hint: 0.125, 0.23
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix

<Player>:
    border: [0,0,0,0]
    size_hint: 0.125, 0.23

<MenuButton>:
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'assets/buttons/btn_menu_inactive.png'

